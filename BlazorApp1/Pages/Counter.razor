@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Current count: @currentCount4</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @ondblclick="IncrementCount4">Click me</button>


@code {
    private int currentCount = 0;
    private int currentCount4 = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void IncrementCount4()
    {
        currentCount4++;
    }
}
